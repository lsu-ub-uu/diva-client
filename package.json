{
  "name": "typescript-starter",
  "version": "1.0.0",
  "description": "A basic typescript app starter for 2023.",
  "main": "index.js",
  "scripts": {
    "dev": "nodemon --exec ts-node --esm src/server.ts",
    "lint": "eslint ./src/**/*.{ts}",
    "lint:fix": "eslint --fix ./src/**/*.{ts}",
    "prettier-format": "prettier --write \"src/**/*.{ts,json}\" --config ./.prettierrc.json",
    "build": "tsc --build",
    "test": "jest --watch",
    "test-verbose": "jest --watch --verbose=true",
    "coverage": "jest --coverage /;exit 0"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/jest": "^28.1.8",
    "@types/lodash": "^4.14.182",
    "@types/node": "^18.15.11",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.58.0",
    "@typescript-eslint/parser": "^5.58.0",
    "eslint": "^8.38.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-prettier": "^4.2.1",
    "nodemon": "^2.0.22",
    "ts-jest": "^28.0.8",
    "ts-node": "^10.9.1",
    "supertest": "^6.3.3",
    "typescript": "^4.9.3"
  },
  "dependencies": {
    "axios": "^1.3.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "lodash": "^4.17.21",
    "cors": "^2.8.5"
  }
}
