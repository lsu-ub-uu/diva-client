{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "isolatedModules": true,
    "lib": [
      "es2022"
    ],
    "outDir": "dist",
    "rootDir": "src",
    "baseUrl": "./src",
    "strict": true,
    "esModuleInterop": true,
    "types": [
      "node",
      "jest"
    ],
    "skipLibCheck": true,
    "resolveJsonModule": true
  },
  "include": [
    "src/**/*",
    "src/**/*.test.ts"
  ],
  "exclude": [
    "jest.config.js"
  ]
}
